@model BudgetEntry

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BudgetEntry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsIncome" /> @Html.DisplayNameFor(model => model.IsIncome)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="MoneyAmount" class="control-label"></label>
                <input asp-for="MoneyAmount" class="form-control" />
                <span asp-validation-for="MoneyAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeAmount" class="control-label"></label>
                <select asp-for="TimeAmount" class="form-control" asp-items="@Html.GetEnumSelectList(typeof(TimeAmount))">
                    <option>Select a time planning</option>
                </select>
                <span asp-validation-for="TimeAmount" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="FromCreditcard" /> @Html.DisplayNameFor(model => model.FromCreditcard)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ToSharedAccount" /> @Html.DisplayNameFor(model => model.ToSharedAccount)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="VariableCosts" /> @Html.DisplayNameFor(model => model.VariableCosts)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="TransferTime" class="control-label"></label>
                <input asp-for="TransferTime" class="form-control" />
                <span asp-validation-for="TransferTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
